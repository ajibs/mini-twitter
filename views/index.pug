extends layout

include mixins/_tweetDeck

block content
  header
    div(class="container")
      div(class="row")
        div(class="col-md-12")
          h1(class="super-title") Twitterify
          a(href="/explore" id="landing-button-experiences" class="btn btn-lg landing-button")
            i(class="fa fa-users fa-lg" aria-hidden="true")
            span(class="landing-button-text") Explore Tweets
          a(href="/profile" id="landing-button-tour-guide" class="btn btn-lg landing-button")
            i(class="fa fa-automobile fa-lg" aria-hidden="true")
            span(class="landing-button-text") Create a Tweet
          p(class="sub-text")
            span(class="sub-inner-text") Thousands of Tweets for you to Enjoy

  section(class="container")
    div(class="form-container")
      h2(class="section-title") Featured Tweets
      if tweets
        +tweetDeck(tweets)

      div(class="view-experiences")
        a(href="/explore" class="btn btn-lg btn-primary") Explore Tweets